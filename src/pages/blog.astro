---
import "../styles/global.css";

import BlogLink from "../components/BlogLink.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const allPost = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Blog";
---

<BaseLayout pageTitle={pageTitle}>
  <p>This is my blog intended to document my learning journey using astro</p>
  <p>This is where I will post also other irrelevant things.</p>

  <ul>
    {allPost.map((post) => <BlogLink url={post.url} title={post.frontmatter.title} />)}
  </ul>
</BaseLayout>
